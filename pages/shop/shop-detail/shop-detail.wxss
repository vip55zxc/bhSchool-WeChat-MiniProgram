@import './../../../assets/css/weui.wxss';

.page {
  padding-left: 20px;
  padding-right: 20px;
  font-size: 30rpx;
  color: #333;
  font-family: "苹方-简";
}

.page__title {
  font-size: 40rpx;
  margin-left: 35rpx;
  padding-top: 100rpx;
}

.text {
  color: #888;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  margin-left: 35rpx;
}

.page__desc {
  padding-bottom: 4rpx;
  padding-top: 4rpx;
}

.content {
  border-radius: 7rpx;
  margin: 10rpx 10rpx 10rpx 0;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.content-title {
  width: 100%;
  color: #888;
  text-align: left;
}

.fgx {
  border: solid 1rpx ghostwhite; /*f8f8f8*/
}

.shop-content {
  width: 100%;
  padding: 10rpx;
  flex-direction: row;
}

.shop- {
  width: 50%;
  float: left;
}

.fgx:last-child {
  border: 0px;
}

.text-shop {
  float: right;
  height: 50rpx;
  line-height: 2;
  color: #888;
}

.text-shop1 {
  float: left;
  height: 50rpx;
  line-height: 2;
}
